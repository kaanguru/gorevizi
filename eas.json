{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "preview": {
      "environment": "preview",
      "developmentClient": true,
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      },
      "distribution": "internal"
    },
    "development": {
      "environment": "development",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk"
      },
      "distribution": "internal"
    },
    "production": {
      "environment": "production",
      "autoIncrement": true,
      "android": {
        "gradleCommand": ":app:assembleRelease"
      },
      "distribution": "internal"
    }
  }
}
